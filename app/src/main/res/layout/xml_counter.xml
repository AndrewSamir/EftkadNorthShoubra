<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/viewHeight"
        android:background="@drawable/background_counter"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCounterDecrease"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/colorInactiveField"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <include layout="@layout/separator_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCounterValue"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorTvLabel"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp">

            <include layout="@layout/separator_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCounterIncrease"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:background="@color/inactive_rating"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/colorInactiveField"
            android:textSize="@dimen/textSize" />
    </LinearLayout>
</RelativeLayout>